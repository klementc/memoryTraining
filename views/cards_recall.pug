extends layout

block content
  h1 Recall!
  strong Seed: #{seed}
  br
  if recall
    strong Score: #{score} / 52
  hr
  p Write the position of each card in the deck (first card = 0, second = 1 ...)

  form
  form(method='POST' action='')  
    table(class="table table-striped table-hovertable-bordered table-bordered")
      thead
      tbody
        - var i = 0
        each c,index in cards
          if i % 3 == 0
            tr

          if recall
            td(class=lg[i])
              img(src="/images/cards/"+cards2[index] width="100" height="150" class="center-block")
          else
            td
              img(src="/images/cards/"+cards[index] width="100" height="150" class="center-block") 
              input(name=c type="input" class="form-control" autocomplete='off')
          - i++
    br
    if !(recall && nList)
      button.btn.btn-primary(type='submit') Submit