extends layout

block content
  h1 Play a Card Game
  strong Seed: #{seed}
  br
  strong Score: #{score} / 52
  hr
  form(method='POST' action='')  
    div.form-group
      table(class="table table-striped table-hovertable-bordered table-bordered")
        thead
        tbody
          - var i = 0
          each c in cards
            if i % group_by == 0
              tr
            td
              img(src="/images/cards/"+c width="100" height="150") 
              if nList && recall
                strong #{nList[i]}
              else
                input(name=c type="input" autocomplete='off')
            - i++
      button.btn.btn-primary(type='submit') Submit