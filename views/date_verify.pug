extends verify

block verif
  if recall
    table(class="table table-bordered")
      thead
        tr
          th(scope='col') # Row
          th(scope='col') Recall
          th(scope='col') Correct
          th(scope='col') Event
      tbody
        - var l = 0
        
        while l < amount
          tr(class=lg[l])
            th(scope='row') #{l}
            td
              | #{nList[l]}
            td
              | #{correct[l][0][0]}
            td
              | #{correct[l][0][1]}
          - l++
  else
    p Enter the words in the following text input, separating words with a space.

    form(method='POST' action='verify')
      div.form-group
        table(class="table table-bordered table-striped table-hover")
          thead
            tr
              th(scope='col') # Row
              th(scope='col') Date
              th(scope='col') Event
          tbody
            - var l = 0
            while l < amount
              tr
                th(scope='row') #{l}
                td
                  input(type="input" name=l autocomplete="off")
                td
                  | #{correct[l][0][1]}
              - l++
      if ! recall
        button.btn.btn-primary(type='submit') Submit