doctype html
html(lang='en')
  head
    title memgames
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@svgdotjs/svg.js@3.0/dist/svg.min.js")
    script(src="https://cdn.plot.ly/plotly-latest.min.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body(data-spy="scroll" data-target=".navbar" data-offset="50")
    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav list-group')
              li(class='list-group-item')
                a(href='/')
                  img(class='img-fluid img-thumbnail' src='/images/logo.png' alt='home')
              if user
                li(class='list-group-item')
                  a(href='/dashboard') #{user.username} [profile]
                li(class='list-group-item')
                  a(href='/logout') Logout
              else
                li(class='list-group-item')
                  a(href='/login') Login
                li(class='list-group-item')
                  a(href='/register') Register
              br
              li(class='list-group-item list-group-item-info') 
                strong Classic Challenges
              li(class='list-group-item')
                a(href='/game/numbers/') Numbers
              li(class='list-group-item')
                a(href='/game/words/') Words
              li(class='list-group-item')
                a(href='/game/pi') Famous numbers
              li(class='list-group-item')
                a(href='/game/flash_words') Flash Words
              li(class='list-group-item')
                a(href='/game/flash_numbers') Flash Numbers
              li(class='list-group-item')
                a(href='/game/card') Cards
              li(class='list-group-item')
                a(href='/game/name_faces') Name & Faces
              li(class='list-group-item')
                a(href='/game/date') Dates
              li(class='list-group-item list-group-item-success')
                a(href='/game/other')
                  strong Other Challenges
              br
              li(class='list-group-item')
                a(href='/statistics') Stats
              li(class='list-group-item')
                a(href='/about') About/Contact
        div(class='col-sm-10')
          block content