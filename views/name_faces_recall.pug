extends layout

block content
  h1 Recall!
  strong Seed: #{seed}
  br
  if recall
    div(class="alert alert-success" role="alert")
      h4 Score: #{score} / #{amount} !
      if user
        strong +#{xp.toFixed(1)} xp
  hr

  form
  form(method='POST' action='')  
    div.form-group
      thead
      tbody
        - var i = 0
        each c in faces
          if i % 3 == 0
            div(class="form-group-row")
          div(class="col-md-2")
            img(src="/names/pics/"+c width="100" height="150" class="center-block") 
            if nList && recall
              strong(class="text-center") #{(names[i]+"").toLowerCase()}
            else
              input(name=c[0] type="input" class="form-control" autocomplete='off')
          - i++
    br
    if !(recall && nList)
      button.btn.btn-primary(type='submit') Submit