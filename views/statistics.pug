extends layout

block content
  h1 Statistics

  p A few numbers about the website's usage.
  hr

  if err
    h2 Error fetching data
  else
    h3 Total Users: #{nbu}
    hr
    h3 Total Games played
    table(class="table table-striped table-bordered w-auto")
      thead
        tr()
          th(scope='col') Game Type
          th(scope='col') # Games Played
      tbody
        each g in nbg
          tr
            td
              | #{g['_id']}
            td
              | #{g['count']}
    hr
    h3 Best scores
    table(class="table table-striped table-bordered w-auto")
      thead
        tr()
          th(scope='col') Game Type
          th(scope='col') # Max score
      tbody
        each g in bs
          tr
            td
              | #{g['_id']}
            td
              | #{g['count']}
    hr
    h3 Game Total
    table(class="table table-striped table-bordered w-auto")
      thead
        tr()
          th(scope='col') Game Type
          th(scope='col') # Elements Remembers
      tbody
        each g in nbr
          tr
            td
              | #{g['_id']}
            td
              | #{g['count']}