extends layout

block content
  h1= title
  hr
  strong For seed: #{seed}
  br
  strong Total words: #{size}
  hr
  if err
    h2 #{err}
  else if recall
    div(class="alert alert-success" role="alert")
      h4(id='score') Your score: #{score} / #{amount*group_by}
      if user
        strong +#{xp.toFixed(1)} xp
    hr
    table(class="table table-bordered")
      thead
        tr
          th(scope='col') #
          th(scope='col') Recall
          th(scope='col') Correct
      tbody
        - var l = 0
        
        while l < amount
          - var cl = (''+nList[l]).split(" ")
          tr(class=lg[l])
            th(scope='row') #{l*group_by}
            td
              each n in cl
                | #{n} 
            td
              each n in correct[l]
                | #{n} 
          - l++
  else
    p Enter the words in the following text input, separating words with a space.

    form(method='POST' action='verify')
      div.form-group
        table(class="table table-bordered table-striped table-hover")
          thead
            tr
              th(scope='col') #
              th(scope='col') Date
          tbody
            - var l = 0
            while l < amount
              tr
                th(scope='row') #{l}
                td
                  input(type="input" name=l autocomplete="off")
              - l++
      if ! recall
        button.btn.btn-primary(type='submit') Submit